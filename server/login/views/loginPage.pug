doctype html

head
  head
    title Jose&apos;s todos-App
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous')
    link(rel='stylesheet' href='css/bootstrap.min.css')
    link(rel='stylesheet' href='open-iconic/font/css/open-iconic-bootstrap.min.css')
    link(rel='stylesheet' href='css/main1.css')
    link(href='open-iconic/font/css/open-iconic.css' rel='stylesheet')
    title my-Todos
nav.navbar.navbar-expand-lg.navbar-light.bg-light
  a.navbar-brand(href='#') Todos
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(href='#')
          | Home
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='#') About
      li.nav-item
        a.nav-link(href='#' tabindex='-1') Contact
    form.form-inline.my-2.my-lg-0
      input.form-control.mr-sm-2(type='search' placeholder='Search Todo' aria-label='Search')
      button.btn.btn-search.custom-btn.my-2.my-sm-0(type='submit')
        | Search
      if locals.user
       a.mr-sm-2 Welcome #{user.nickname}
      else

    ul.nav.navbar-nav.navbar-right.my-2.my-lg-0
    if locals.user
      li
        a(href='/logout')
          span.glyphicon.glyphicon-user.mr-sm-2
          |  Log Out
    else
      li
        a(href='/user')
          span.glyphicon.glyphicon-log-in.mr-sm-2
          |  Login
